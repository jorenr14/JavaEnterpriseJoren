<Configuration>
	<Appenders>
		<Console name="sysout" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd' 'HH:mm:ss.SSS} [%t] %-5p %c %x - %m%n"/>
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="be.ucll" level="DEBUG"/>
		<Root level="INFO">
			<AppenderRef ref="sysout"/>
		</Root>
	</Loggers>

</Configuration>